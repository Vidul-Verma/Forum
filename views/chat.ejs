<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href=".././assets/css/bootstrap.min.css">
  <link rel="stylesheet" href=".././assets/css/font.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href=".././assets/css/Chat.css">
  <title>My HTML Page</title>
</head>
<body onload="document.body.style.opacity='1'">

  <div class="container app">
    <div class="row app-one">

      <div class="col-lg-3 col-md-4 col-sm-4 col-xs-5 side">
        <div class="side-one">
          <!-- Heading -->
          <div class="heading">
            <div class="heading-avatar" >
              <div class="heading-avatar-icon">
                <img id="my_profile_pic_1">

              </div>
            </div>
            <div class="heading-name">
              <div class="heading-name-meta" id="showMyName"></div>
            </div>
            <!-- <div style="width: 100%;display: inline-block;"></div> -->
            <div class="heading-logout" >
              <i class="fa fa-comments" title="Create Chat" aria-hidden="true" data-toggle="modal" data-target="#addNewChat"></i>
              <a href='/forum' target="_blank"><i class="fa fa-home" title="Forum" aria-hidden="true" ></i></a>
              <i class="fa fa-sign-out" id="logout_btn" aria-hidden="true"></i>
            </div>


          </div>
          <!-- Heading End -->

          <!-- SearchBox -->
          <div class="row searchBox">
            <div class="col-sm-12 searchBox-inner">
              <div class="form-group has-feedback">
                <input id="searchText" type="text" class="form-control" name="searchText" placeholder="Search">
              <span class="glyphicon glyphicon-search form-control-feedback"></span>
              </div>
            </div>
          </div>

          <!-- Search Box End -->
          <!-- sideBar -->
          <div class="row sideBar" id="messagesFrom">



          </div>

          <div class="custom-menu">
              <li id="delete_custom_menu">Delete</li>
              <li id="cancel_custom_menu">Cancel</li>
          </div>

          <div class="row sideBar" id="searchResults" style="display: none;">
            SEARCH RESULTS DIV
          </div>
          <!-- Sidebar End -->
        </div>
        <div class="side-two">

          <!-- Heading -->
          <div class="row newMessage-heading">
            <div class="row newMessage-main">
              <div class="col-sm-2 col-xs-2 newMessage-back">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
              </div>
              <div class="col-sm-10 col-xs-10 newMessage-title">
                New Chat
              </div>
            </div>
          </div>
          <!-- Heading End -->

          <!-- ComposeBox -->
          <div class="row composeBox">
            <div class="col-sm-12 composeBox-inner">
              <div class="form-group has-feedback">
                <input id="composeText" type="text" class="form-control" name="searchText" placeholder="Search People">
                <span class="glyphicon glyphicon-search form-control-feedback"></span>
              </div>
            </div>
          </div>
          <!-- ComposeBox End -->

          <!-- sideBar -->
          <div class="row compose-sideBar">
            <div class="row sideBar-body">
              <div class="col-sm-3 col-xs-3 sideBar-avatar">
                <div class="avatar-icon">
                  <!-- # -->
                  <img src="#">
                </div>
              </div>

            </div>


          </div>
        </div>
        <!-- Sidebar End -->
      </div>


      <!-- New Message Sidebar End -->

      <!-- Conversation Start -->
      <div class="col-lg-9 col-md-8 col-sm-8 col-xs-7 conversation">
        <!-- Heading -->
        <div class=" heading">
          <div class="show-hide-sideBar">
            <i class="fa fa-bars" id="menu"></i>
          </div>
          <div class="heading-avatar">
            <div class="heading-avatar-icon" id="withName">
              <img id="my_profile_pic" >
            </div>
          </div>
          <div class="heading-name" id="currentUserName">
            <span class="heading-online">Online</span>
          </div>

        </div>
        <!-- Heading End -->
        <div class="selectmessage">
          <img src=".././assets/img/chat.png" style="margin:50px;"></img>
        </div>
        <!-- Message Box -->
        <div class="row message" id="showmessages" >


        </div>
        <!-- Message Box End -->


        <!-- Reply Box -->
        <div class="reply" style="display: none;">

          <div class="reply-main" >
            <textarea class="form-control" rows="2" id="comment" placeholder="Type in your message here"></textarea>
          </div>
          <div class="reply-emojis" style="display: none;">
            <i class="fa fa-smile-o fa-2x"></i>
          </div>
          <div class="reply-send">
            <i class="fa fa-send fa-2x" aria-hidden="true" id="createMsg" title="Send Message"></i>
          </div>
        </div>
        <!-- Reply Box End -->
      </div>
      <!-- Conversation End -->
    </div>
    <!-- App One End -->
  </div>
  <input type="hidden" value="" id="userClicked">
  <!-- App End -->

  <!-- MODALS -->

      <div class="modal fade" id="addNewChat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form ><!--
            <div class="modal-header">
            </div> -->

            <div class="modal-body">
              <h1 class="modal-title" id="exampleModalLabel">Create a new chat</h1>

              <div class="form-group">
                <!-- <label id="toUserNameLabel">To</label> -->
                <input id="toUserName" name= "toUserName" type="text" class="form-control" placeholder="username">
              </div>

             </div>
             <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="savebutton" id="savebutton">Create Chat</button>
            </div>
            </form>
          </div>
        </div>
      </div>





<script src=".././assets/js/jquery.js" ></script>
<script type="text/javascript" src=".././assets/js/deparams.js"></script>
<script type="text/javascript" src=".././assets/js/mustache.js"></script>
<script type="text/javascript" src=".././assets/js/moment.js"></script>

<script src="/socket.io/socket.io.js"></script>
  <script src=".././assets/js/bootstrap.js" ></script>
  <script src=".././assets/js/Chat.js" ></script>

  <script id="show-name" type="text/template">

          <a href='/profile?username={{name}}'><span class='name'>{{name}}</span> </a>

    </script>

  <script id="message-template-to" type="text/template">

          <p id="m{{msgId}}" class="sender col-sm-12 individual-message"> {{msg}}<br> <span class='time'>{{createdAt}}</span> <i id="{{msgId}}" class="fa fa-trash-o fa-1x delete-btn"></i>   <p>

    </script>

<script id="message-template-to-nodelete" type="text/template">

          <p id="m{{msgId}}" class="sender col-sm-12 individual-message"> {{msg}}<br> <span class='time'>{{createdAt}}</span><p>

    </script>

    <script id="message-template-date" type="text/template">

            <p class="date col-sm-12"> {{createdDate}} <p>

      </script>

    <script id="message-template-from" type="text/template">

            <p id="m{{msgId}}" class="receiver col-sm-12 individual-message"> {{msg}}<br>  <span class='time'>{{createdAt}} </span> <i  id="{{msgId}}" class="fa fa-trash-o fa-1x delete-btn"></i><p>
      </script>

    <script id="message-template-from-nodelete" type="text/template">
            <p id="m{{msgId}}" class="receiver col-sm-12 individual-message"> {{msg}}<br>  <span class='time'>{{createdAt}} </span><p>
      </script>

    <script id="user-template" type="text/template">

      <div id="{{displayId}}" class="row sideBar-body" userName={{userName}}>

        <div class="col-sm-3 col-xs-3 sideBar-avatar">
          <div class="avatar-icon">
            <img src="{{avatar}}">
          </div>
        </div>
        <div class="col-sm-9 col-xs-9 sideBar-main">
          <div class="row">
            <div class="col-sm-8 col-xs-8 sideBar-name" >
              <span class="name-meta" id={{userName}}>{{userName}}</span>
            </div>
            <div class="col-sm-4 col-xs-4 pull-right sideBar-time">
              <span class="time-meta pull-right unread_count">{{num}}</span>
            </div>
          </div>
        </div>
      </div>

      </script>
      <script src="https://unpkg.com/ionicons@4.2.4/dist/ionicons.js"></script>
</body>
</html>
